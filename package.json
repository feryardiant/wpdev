{
  "name": "blank",
  "version": "0.2.9",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "wordpress",
    "wordpress-theme",
    "wordpress-boilerplate",
    "wordpress-project"
  ],
  "scripts": {
    "serve": "cross-env WP_ENV=development gulp",
    "archive": "cross-env WP_ENV=production gulp build && gulp zip",
    "build": "cross-env WP_ENV=production gulp build --skip php"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "bulma": "^0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12",
    "@babel/preset-env": "^7.12",
    "@commitlint/cli": "^11.0",
    "@feryardiant/commitlint-config": "~0.2.0",
    "@wdio/browserstack-service": "^7.19",
    "@wdio/cli": "^7.19",
    "@wdio/dot-reporter": "^7.19",
    "@wdio/local-runner": "^7.19",
    "@wdio/mocha-framework": "^7.19",
    "@wordpress/eslint-plugin": "^11.1",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.13",
    "cross-env": "^7.0.2",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "expect-webdriverio": "^3.2.1",
    "gulp": "^4.0",
    "gulp-autoprefixer": "^8.0",
    "gulp-babel": "^8.0",
    "gulp-clean-css": "^4.3",
    "gulp-connect-php": "^1.0",
    "gulp-eslint": "^6.0",
    "gulp-if": "^3.0",
    "gulp-imagemin": "^8.0",
    "gulp-phpcs": "^3.1",
    "gulp-rename": "^2.0",
    "gulp-sass": "^5.1",
    "gulp-sourcemaps": "^3.0",
    "gulp-stylelint": "^13.0",
    "gulp-uglify": "^3.0",
    "gulp-wp-pot": "2.5",
    "gulp-zip": "^5.0",
    "husky": "^4.3",
    "lint-staged": "^12.3",
    "standard-changelog": "^2.0.27",
    "standard-version": "^9.0",
    "stylelint": "^14.6.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "webdriverio": "^7.19",
    "yargs": "^17.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e -V",
      "pre-commit": "lint-staged"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "parser": "babel-eslint"
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        2,
        "never"
      ],
      "wrap-iife": [
        2,
        "inside"
      ]
    }
  },
  "eslintIgnore": [
    "**/*.min.js",
    "**/vendor/**",
    "/build/**",
    "/node_modules/**",
    "/public/**",
    "/gulpfile.js",
    "/**.old"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "commitlint": {
    "extends": [
      "@feryardiant/commitlint-config"
    ]
  },
  "lint-staged": {
    "packages/**/*.php": [
      "vendor/bin/phpcs --standard=packages/phpcs.xml"
    ],
    "packages/**/*.js": [
      "eslint --fix"
    ],
    "packages/**/*.scss": [
      "stylelint --fix"
    ]
  }
}
